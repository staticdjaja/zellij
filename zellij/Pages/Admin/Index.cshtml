@page
@model zellij.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h1>
    <div class="alert alert-warning mb-0">
        <i class="fas fa-shield-alt me-2"></i>Administrator Access
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card admin-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-box fa-3x text-primary mb-3"></i>
                <h4>@Model.ProductCount</h4>
                <p class="card-text">Total Products</p>
                <a asp-page="./Products/Index" class="btn btn-primary">
                    <i class="fas fa-cog me-1"></i>Manage Products
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card admin-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-success mb-3"></i>
                <h4>@Model.UserCount</h4>
                <p class="card-text">Registered Users</p>
                <a asp-page="./Users/Index" class="btn btn-success">
                    <i class="fas fa-users me-1"></i>Browse Users
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card admin-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                <h4>@Model.InStockProducts</h4>
                <p class="card-text">In Stock Products</p>
                <a asp-page="./Products/Index" asp-route-inStock="true" class="btn btn-info">
                    <i class="fas fa-warehouse me-1"></i>View Stock
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card admin-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                <h4>@Model.OutOfStockProducts</h4>
                <p class="card-text">Out of Stock</p>
                <a asp-page="./Products/Index" asp-route-inStock="false" class="btn btn-warning">
                    <i class="fas fa-exclamation-triangle me-1"></i>View Out of Stock
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-bar me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a asp-page="./Products/Create" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-plus me-2"></i>Add New Product
                        </a>
                    </div>
                    <div class="col-md-6 mb-3">
                        <a asp-page="/Products/Index" class="btn btn-outline-primary btn-lg w-100">
                            <i class="fas fa-eye me-2"></i>View Public Site
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle me-2"></i>System Info</h5>
            </div>
            <div class="card-body">
                <p><strong>Current User:</strong> @User.Identity?.Name</p>
                <p><strong>Last Login:</strong> @DateTime.Now.ToString("MMM dd, yyyy")</p>
                <p><strong>Database:</strong> Connected</p>
            </div>
        </div>
    </div>
</div>