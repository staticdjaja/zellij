@page
@model zellij.Pages.Checkout.IndexModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="row">
    <div class="col-12">
        <h1><i class="fas fa-credit-card me-2"></i>Checkout</h1>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="row">
                <div class="col-lg-8">
                    <!-- Shipping Address Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-shipping-fast me-2"></i>Delivery Address</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.UserAddresses.Any())
                            {
                                @foreach (var address in Model.UserAddresses)
                                {
                                    <div class="form-check mb-3">
                                        <input asp-for="Form.ShippingAddressId" value="@address.Id" 
                                               class="form-check-input" type="radio" 
                                               id="address-@address.Id" 
                                               checked="@(address.Id == Model.Form.ShippingAddressId)">
                                        <label class="form-check-label w-100" for="address-@address.Id">
                                            <div class="card border-0 bg-light">
                                                <div class="card-body py-2">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <strong>@address.AddressName</strong>
                                                            @if (address.IsDefault)
                                                            {
                                                                <span class="badge bg-primary ms-2">Default</span>
                                                            }
                                                            <address class="mb-0 mt-1">
                                                                @address.StreetAddress<br>
                                                                @if (!string.IsNullOrEmpty(address.AddressLine2))
                                                                {
                                                                    @address.AddressLine2<br>
                                                                }
                                                                @address.City, @address.State @address.PostalCode<br>
                                                                @address.Country
                                                            </address>
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(address.Phone))
                                                        {
                                                            <small class="text-muted">
                                                                <i class="fas fa-phone me-1"></i>@address.Phone
                                                            </small>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                }
                                
                                <div class="mt-3">
                                    <a asp-page="/Account/Addresses/Create" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-plus me-1"></i>Add New Address
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    No delivery addresses found. <a asp-page="/Account/Addresses/Create">Add an address</a> to continue.
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Payment Method Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Payment Method</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-hand-holding-usd fa-2x me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Cash on Delivery</h6>
                                        <p class="mb-0">Pay when your order is delivered to your doorstep. Our delivery team will collect the payment in cash.</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="bg-light p-3 rounded">
                                <h6><i class="fas fa-info-circle me-2"></i>How it works:</h6>
                                <ul class="mb-0">
                                    <li>Place your order now</li>
                                    <li>We'll prepare and package your marble</li>
                                    <li>Our delivery team will contact you</li>
                                    <li>Pay in cash when you receive your order</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Order Notes Section -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-sticky-note me-2"></i>Order Notes (Optional)</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-floating">
                                <textarea asp-for="Form.OrderNotes" class="form-control" 
                                          placeholder="Special delivery instructions, preferred delivery time, etc." 
                                          style="height: 100px"></textarea>
                                <label asp-for="Form.OrderNotes">Special instructions for delivery...</label>
                            </div>
                            <small class="text-muted">
                                Examples: "Call before delivery", "Leave at security desk", "Preferred delivery time: mornings"
                            </small>
                        </div>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="form-check">
                                <input asp-for="Form.AgreeToTerms" class="form-check-input" required>
                                <label asp-for="Form.AgreeToTerms" class="form-check-label">
                                    I agree to the <a href="#" target="_blank">Terms and Conditions</a> and <a href="#" target="_blank">Privacy Policy</a>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Order Summary -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Order Summary</h5>
                        </div>
                        <div class="card-body">
                            <!-- Items Summary -->
                            <div class="mb-3">
                                <h6>Items (@Model.CartSummary.TotalItems)</h6>
                                @foreach (var item in Model.CartSummary.Items)
                                {
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="text-truncate me-2">@item.Product.Name × @item.Quantity</span>
                                        <span>$@item.Total.ToString("F2")</span>
                                    </div>
                                }
                            </div>

                            <hr>

                            <!-- Totals -->
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>$@Model.CartSummary.SubTotal.ToString("F2")</span>
                            </div>
                            
                            @if (Model.CartSummary.DiscountAmount > 0)
                            {
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Discount (@Model.CartSummary.AppliedCoupon?.Code):</span>
                                    <span>-$@Model.CartSummary.DiscountAmount.ToString("F2")</span>
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between mb-2">
                                <span>Shipping:</span>
                                <span>
                                    @if (Model.CartSummary.ShippingCost == 0)
                                    {
                                        <span class="text-success">FREE</span>
                                    }
                                    else
                                    {
                                        <span>$@Model.CartSummary.ShippingCost.ToString("F2")</span>
                                    }
                                </span>
                            </div>
                            
                            <div class="d-flex justify-content-between mb-3">
                                <span>Tax:</span>
                                <span>$@Model.CartSummary.Tax.ToString("F2")</span>
                            </div>
                            
                            <hr>
                            
                            <div class="d-flex justify-content-between mb-4">
                                <strong>Total:</strong>
                                <strong class="text-primary h5">$@Model.CartSummary.Total.ToString("F2")</strong>
                            </div>

                            <!-- Payment Method Display -->
                            <div class="alert alert-info mb-3">
                                <small>
                                    <i class="fas fa-money-bill-wave me-1"></i>
                                    <strong>Cash on Delivery</strong><br>
                                    Pay $@Model.CartSummary.Total.ToString("F2") when order is delivered
                                </small>
                            </div>

                            <!-- Place Order Button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-check me-2"></i>Place Order
                                </button>
                                <a asp-page="/Cart/Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Back to Cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}